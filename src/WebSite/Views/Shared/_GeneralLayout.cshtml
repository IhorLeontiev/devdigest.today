@using Core.Models
@using Core.Web
@{
    var featuredTelegramChannels = new List<Link>
    {
        new Link("devdigest // net core", "https://telegram.me/dncuug"),
        new Link("devdigest // xamarin", "https://telegram.me/xamarin_ua"),
        new Link("devdigest // azure", "https://telegram.me/azure_digest"),
        new Link("devdigest // data science", "https://telegram.me/d_science")
    };
    
    var featuredFacebookPages = new List<Link>
    {
        new Link(".NET Core User Group","https://facebook.com/groups/dncuug"),
        new Link("Azure User Group","https://facebook.com/groups/azure.ua"),
        new Link("Xamarin User Group","https://facebook.com/groups/xamarin.ua")        
    };
    
    var featuredTwitterChannels = new List<Link>
    {
        new Link("//devdigest on Twitter","https://twitter.com/devdigest_today")
    };
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />    
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no" />
    <meta name="msvalidate.01" content="13285491122FD93E71050B4D568B72FA" />
    <meta http-equiv="Content-type" content="text/html; charset=UTF-8" />    
    
    <meta property="fb:pages" content="2024104024583154" />
    <meta property="fb:app_id" content="@Core.Settings.Current.FbAppId" />
    <meta property="og:site_name" content="@Core.Settings.Current.WebSiteTitle" />
    <meta property="author" content="@Core.Settings.Current.WebSiteTitle" />
    <meta property="article:author" content="https://www.facebook.com/dncuug/">
    
    @RenderSection("head",  required: false)

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Ubuntu:400,400i,700&amp;subset=cyrillic,cyrillic-ext" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-social/5.1.1/bootstrap-social.min.css" />
    <link rel="stylesheet" href="/css/site.css" />

    <title>@ViewData["Title"] - //devdigest | Developers Digest | Latest news about .NET Core, Microsoft Azure and Xamarin</title>
</head>
<body>
    
    @await Html.PartialAsync("~/Views/FacebookScripts.cshtml")    

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="font-weight: bold" href="/">//devdigest</a>
            </div>
            
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Streams <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/page/1?categoryId=1">.NET Core</a></li>
                            <li><a href="/page/1?categoryId=2">Xamarin</a></li>
                            <li><a href="/page/1?categoryId=3">Azure</a></li>
                            <li><a href="/page/1?categoryId=4">Data Science</a></li>
                        </ul>
                    </li>  
                    <li><a href="/vacancies/1">Job</a></li>
                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Events&nbsp; @*<span class="label label-danger">Hot!</span>*@ <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            @* <li><a href="#">No actual events</a></li> *@
                            <li><a href="/content/build-2019">@Pages.Build2019</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Archive</li>
                            <li><a href="/content/developex-tech-club">@Pages.DevelopexTechClub</a></li>
                            <li><a href="/content/microsoft-tech-summit-warsaw">@Pages.MicrosoftTechSummitWarsaw</a></li>
                            <li><a href="/content/build-2018">@Pages.Build2018</a></li>
                            <li><a href="/content/cloud-developers-days">@Pages.CloudDevelopersDays</a></li>
                        </ul>
                    </li>  
                    
                    <li><a href="/search">Search</a></li>                                 
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Social networks<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-header">Facebook</li>
                            
                            @foreach (var x in featuredFacebookPages)
                            {
                                <li><a href=@x.Url>@x.Title</a></li>
                            }
                            
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Telegram</li>
                            
                            @foreach (var x in featuredTelegramChannels)
                            {
                                <li><a href=@x.Url>@x.Title</a></li>    
                            }
                            
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Twitter</li>
                            
                            @foreach (var x in featuredTwitterChannels)
                            {
                                <li><a href=@x.Url>@x.Title</a></li>    
                            }
                            
                        </ul>
                    </li> 
                    
                    <li><a href="https://github.com/dncuug">GitHub</a></li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">About <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/content/platform">Platform</a></li>
                            <li><a href="/content/partners">@Pages.Partners</a></li>
                            <li><a href="/content/about-project">@Pages.AboutProject</a></li>
                        </ul>
                    </li>                            
                </ul>
                <ul class="nav navbar-nav navbar-right" style="padding-top: 10px;padding-left: 10px;">
                    <li>
                        <div class="fb-login-button" data-size="medium" data-button-type="continue_with" data-auto-logout-link="true" data-use-continue-as="true" data-onlogin="checkLoginState"></div>
                    </li>
                </ul>
            </div>
            <!--/.navbar-collapse -->
        </div>
    </nav>   

@RenderSection("top", required: false)

<div class="container">    
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <footer class="container-fluid">
        <section class="container">
            <div class="col-md-2 col-sm-2">
                <h4>Community</h4>

                <h5>Facebook</h5>
                <ul>
                    @foreach (var x in featuredFacebookPages)
                    {
                        <li><a href=@x.Url>@x.Title</a></li>
                    }
                </ul>
            </div>
            
            <div class="col-md-2 col-sm-2">
                <h4>&nbsp;</h4>
                <h5>Telegram</h5>
                <ul>
                    @foreach (var x in featuredTelegramChannels)
                    {
                        <li><a href=@x.Url>@x.Title</a></li>
                    }
                </ul>
            </div>
            <div class="col-md-2 col-sm-2">
                <h4>Information</h4>
                <ul>
                    <li><a href="/content/partners">Partners</a></li>
                    <li><a href="/content/about-project">About Us</a></li>
                </ul>
            </div>
            <div class="col-md-3 col-sm-3">
                <h4>Concept</h4>
                Our community is a union of developers, who use and love Microsoft technology stack: .NET Core, Xamarin and Microsoft Azure.
            </div>
            <div class="col-md-3 col-sm-3 text-right">
                <br />
                <p>//devdigest &copy; @DateTime.Now.Year</p>
            </div>            
        </section>    
    </footer>
    
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"></script>
    <script src="/js/site.js"></script>

    @RenderSection("scripts", required: false)

    <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-5273549-33', 'auto');
    ga('send', 'pageview');
    </script>
    
    <script>
    ((window.gitter = {}).chat = {}).options = {
        room: 'dncuug/Lobby'
    };
    </script>
    <script src="https://sidecar.gitter.im/dist/sidecar.v1.js" async defer></script>
    
</body>
</html>
